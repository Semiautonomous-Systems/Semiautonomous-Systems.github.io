---
import Card from './Card.astro';

interface Props {
  number: number;
  title: string;
  class?: string;
}
const { number, title, class: className } = Astro.props;
---

<Card class:list={['step-card', className]}>
  <div class="step-number">{number}</div>
  <div class="step-content">
    <h3>{title}</h3>
    <p><slot /></p>
  </div>
</Card>

<style>
  .step-card {
    display: grid;
    grid-template-columns: 40px 1fr;
    gap: var(--space-md);
    align-items: start;
  }

  .step-number {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent);
    color: white;
    font-weight: 700;
    font-size: 14px;
    border-radius: 50%;
    box-shadow: 0 0 16px var(--color-accent-glow);
    flex-shrink: 0;
  }

  .step-content h3 {
    font-family: var(--font-display);
    font-size: 18px;
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .step-content p {
    font-size: 14px;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
  }
</style>
