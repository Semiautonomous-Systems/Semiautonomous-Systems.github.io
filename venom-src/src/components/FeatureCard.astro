---
import Card from './Card.astro';

interface Props {
  title: string;
  class?: string;
}
const { title, class: className } = Astro.props;
---

<Card class:list={['feature-card', className]}>
  <h3>{title}</h3>
  <p><slot /></p>
</Card>

<style>
  .feature-card h3 {
    font-family: var(--font-display);
    font-size: 18px;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }

  .feature-card p {
    font-size: 14px;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
  }
</style>
