---
interface Props {
  variant?: 'default' | 'highlight' | 'cta';
  class?: string;
}
const { variant = 'default', class: className } = Astro.props;
---

<div class:list={['card', variant !== 'default' && `card-${variant}`, className]}>
  <slot />
</div>

<style>
  .card {
    background: var(--color-bg-card);
    backdrop-filter: blur(12px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    box-shadow: var(--shadow-card);
    transition: var(--transition-base);
  }

  .card:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-card-hover);
  }

  /* Highlight variant - teal accent */
  .card-highlight {
    background: rgba(45, 212, 191, 0.05);
    border-color: rgba(45, 212, 191, 0.2);
  }

  .card-highlight:hover {
    border-color: rgba(45, 212, 191, 0.3);
  }

  /* CTA variant - red accent */
  .card-cta {
    background: rgba(183, 33, 21, 0.08);
    border-color: rgba(183, 33, 21, 0.2);
    text-align: center;
    padding: var(--space-2xl);
  }

  .card-cta:hover {
    border-color: rgba(183, 33, 21, 0.3);
  }
</style>
